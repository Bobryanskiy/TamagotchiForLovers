<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TitleScreen" android:background="@color/main_theme">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="80dp" android:layout_marginTop="50dp">
        <TextView
                android:text="Я пока что просто тыкаюсь"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/startText"
                android:textSize="20sp"
                tools:visibility="visible" android:layout_marginTop="100dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_weight="3" android:textAlignment="center"/>
        <Button
                android:text="Играть"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/playButton"
                android:layout_weight="1" android:insetLeft="70dp" android:insetRight="70dp"
                android:insetBottom="0dp" android:insetTop="0dp" android:layout_marginTop="40dp"
                android:onClick="playActivity"/>
        <Button
                android:text="Настройки"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/settingButton" android:layout_weight="1"
                android:insetLeft="70dp" android:insetRight="70dp" android:insetTop="0dp" android:insetBottom="0dp"
                android:layout_marginTop="50dp"/>
        <Button
                android:text="Выход"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/exitButton" android:layout_weight="1"
                android:insetLeft="70dp" android:insetRight="70dp" android:insetTop="0dp" android:insetBottom="0dp"
                android:layout_marginTop="50dp" android:layout_marginBottom="50dp" android:onClick="exitGame"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>